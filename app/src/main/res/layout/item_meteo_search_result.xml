<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp">

<LinearLayout
        android:id="@+id/search_result_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanc_transparant"
        android:orientation="vertical"
        android:padding="5dp">

    <LinearLayout
        android:id="@+id/search_result_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanc_transparant"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/week_top_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blanc_transparant"
            android:orientation="vertical">


            <TextView
                android:id="@+id/search_ville_name"
                style="@style/HomeHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:text="Paris" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/week_top_card_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@color/blanc_transparant"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_temperature"
                style="@style/HomeHeaderTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center|right"
                android:text="25Â°" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/weatherStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/search_temp"
        style="@style/WeatherTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/soleil" />

        <TextView
            android:id="@+id/search_hb"
            style="@style/WeatherTextTitle"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:text="" />
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>